<div class="page-header">
  <h1>
    Bathrooms
    <a href="/bathrooms/new" class="btn btn-lg btn-success">New Bathroom</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bathrooms_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :ratingeasy_to_find, "Ratingeasy to find" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :ratingeasy_to_find_gteq, :class => "form-control", :placeholder => "Ratingeasy to find greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :ratingeasy_to_find_lteq, :class => "form-control", :placeholder => "Ratingeasy to find less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :public_or_not_eq, "Public or not" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :public_or_not_eq, "1", checked: ((params[:q] && params[:q][:public_or_not_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :public_or_not_eq, "0", checked: ((params[:q] && params[:q][:public_or_not_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :public_or_not_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
  <%= f.label :comment_id, "Comment" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :comment_id_gteq, :class => "form-control", :placeholder => "Comment greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :comment_id_lteq, :class => "form-control", :placeholder => "Comment less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :notes_cont, "Notes contains" %>
    <%= f.text_field :notes_cont, :class => "form-control", :placeholder => "Notes contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Neighborhood Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='neighborhoodgteqcreated_atPicker'>
                  <%= f.text_field :neighborhood_created_at_gteq, :class => "form-control", :placeholder => "Neighborhood Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='neighborhoodlteqcreated_atPicker'>
                  <%= f.text_field :neighborhood_created_at_lteq, :class => "form-control", :placeholder => "Neighborhood Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#neighborhoodgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#neighborhoodlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#neighborhoodgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#neighborhoodlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#neighborhoodlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#neighborhoodgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :users_email_cont, "User email contains" %>
      <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bathrooms" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bathrooms_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>Notes</th>
        <th>Comment</th>
        <th>Public or not</th>
        <th>Ratingeasy to find</th>
        <th>Actions</th>
      </tr>

      <% @bathrooms.each do |bathroom| %>
      <tr>
        <td><%= bathroom.address %></td>
        <td>
          <% if bathroom.neighborhood.present? %>
            <a href="/neighborhoods/<%= bathroom.neighborhood.id %>">
              <%= bathroom.neighborhood.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= bathroom.notes %></td>
        <td><%= bathroom.comment_id %></td>
        <td><%= bathroom.public_or_not %></td>
        <td><%= bathroom.ratingeasy_to_find %></td>
        <td>
          <a href="/bathrooms/<%= bathroom.id %>" class="btn btn-primary">Show</a>
          <a href="/bathrooms/<%= bathroom.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bathroom/<%= bathroom.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bathrooms, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>